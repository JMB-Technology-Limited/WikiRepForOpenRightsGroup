{%  if value is not null and value.lat != null and value.lng != null %}

	{{  value.lat }},{{  value.lng }}



	<div id="fieldLatLngViewMap{{ viewTemplateID }}" style="width: 300px; height: 300px;"></div>
	<script>
		$(document).ready(function() {
			var map =  L.map('fieldLatLngViewMap{{ viewTemplateID }}').setView([{{ value.lat }}, {{ value.lng }}], 10);
			L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
				attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
			}).addTo(map);
		   L.marker([{{ value.lat }}, {{ value.lng }}]).addTo(map);
		});
	</script>

{%  endif %}

